{
  "name": "pitch-it",
  "version": "0.8.0",
  "description": "WebRTC based communication tool",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/J-Pi/pitch-it.git"
  },
  "scripts": {
    "start": "node ./server/run.js",
    "clean": "node ./scripts/clean.js",
    "copy": "node ./scripts/copy.js", 
    "build": "npm run clean && npm run copy && webpack --config ./webpack.config.js && lessc ./server/asset/styles/main.less ./dist/server/asset/main.css",
    "dev": "webpack-dev-server --config ./webpack.dev.config.js",
    "test": "mocha ./test --recursive",
    "coverage": "istanbul cover node_modules/mocha/bin/_mocha -- --recursive",
    "start-new": "node ./pitch-it/launch.js"
  },
  "dependencies": {
    "express": "4.14.0",
    "ws": "1.1.1"
  },
  "devDependencies": {
    "babel-core": "6.14.0",
    "babel-loader": "6.2.5",
    "babel-preset-es2015": "6.14.0",
    "istanbul": "0.4.5",
    "less": "2.7.1",
    "mocha": "3.0.2",
    "webpack": "1.13.2",
    "webpack-dev-server": "1.16.1"
  }
}
